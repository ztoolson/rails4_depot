<!DOCTYPE html>
<html>
<head>
  <title>Zach's Online Bookstore</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Zach's Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id:'cart') do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <ul>
        <li><a href="http://...">Home</a></li>
        <li><a href="http://.../faq">Questions</a></li>
        <li><a href="http://.../news">News</a></li>
        <li><a href="http://.../contact">Contact</a></li>
        <br>
        <%= Time.now.strftime("%-m/%-d/%Y %-I:%M %p") %>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
